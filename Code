  display.setCursor(0,0);
 display.println(WiFi.localIP());
 display.display();
  display.clearDisplay();
  
      clearStrip();
         for (uint16_t L = 0; L < (NUM_PIXEL); L++) {
                strip.setPixelColor(L,0,255,0); 
